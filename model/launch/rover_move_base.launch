<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find model)/robots/vmegarover.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find model)/configuration_files/rviz/move_base.rviz"/>  

  <!-- gazebo world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find model)/worlds/sample.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- load the urdf into the ros parameter server -->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(arg model)'" />

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model vmegarover -param robot_description"/>
  
  <!-- key control -->
  <include file="$(find model)/launch/keycontrol.launch"/>

  <!-- controll -->
  <include file="$(find model)/launch/control.launch"/>

  <!-- map server -->
  <arg name="map_file" default="$(find model)/map/sample.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
  
  <!-- amcl -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen" args="/scan:=/scan" clear_params="true">
    <rosparam command="load" file="$(find model)/configuration_files/amcl.yaml"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="odom_frame_id" value="odom" />
    <param name="global_frame_id" value="map"/>
  </node>

  
  <!-- gmapping -->
  <!--node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen" args="/scan:=scan" clear_params="true">
    <rosparam command="load" file="$(find model)/configuration_files/gmapping.yaml"/>
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom" />
    <param name="map_frame" value="map"/>
  </node>
-->
  <!-- move_base -->
  <node pkg="model" type="navigation" name="move_navigation" output="screen">
    <rosparam file="$(find model)/configuration_files/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find model)/configuration_files/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find model)/configuration_files/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find model)/configuration_files/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find model)/configuration_files/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find model)/configuration_files/move_base_params.yaml" command="load" />
    
    <param name="global_costmap/global_frame" value="map" />
    <param name="global_costmap/robot_base_frame" value="base_link" />
    <param name="local_costmap/laser_scan_sensor/sensor_frame" value="laser_link" />
    <param name="local_costmap/laser_scan_sensor/topic" value="scan" />
    <param name="local_costmap/global_frame" value="odom" />
    <param name="local_costmap/robot_base_frame" value="base_link" />
    <!--remap from="cmd_vel" to="diff_drive_controller/cmd_vel" /-->
    <!--remap from="odom" to="diff_drive_controller/odom" /-->
  </node>

  <!-- rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
 </launch>
